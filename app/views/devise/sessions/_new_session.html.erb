<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render 'layouts/error_messages', object: resource %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: "form-setting" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "form-setting" %>
    <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    <% end -%>
    <%= f.submit "Log in", class: "button small"%>
<% end %>

<p class="text-center form-agreement">Forgot password? <%= link_to  'Reset password', new_password_path(resource_name) %></p>