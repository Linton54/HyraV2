<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render 'layouts/error_messages', object: resource %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Enter email...', class: "form-setting" %>

    <%= f.submit "Send reset password instructions", class: "button small"%>
<% end %>