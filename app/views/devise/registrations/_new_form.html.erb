<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true } do |f| %>
        <%= render 'layouts/error_messages', object: resource %>
        <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: "form-setting" %>
        <%= f.text_field :username, placeholder: 'Username', class: "form-setting" %>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "form-setting" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Re-password', class: "form-setting" %>
        <%= f.submit "Sign up", class: "button small" %>
<% end %>
