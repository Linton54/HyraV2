<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, multipart: true) do |f| %>
    <%= render 'layouts/error_messages', object: resource %>
    <%= f.label :email, autocomplete: "off" %>
    <%= f.email_field :email, autofocus: true, class: "form-setting"  %>
    <div class="row">
      <div class="column large-4">
        <%= f.label :avatar, autocomplete: "off" %>
        <img class="thumbnail edit-img" src="<%= resource.avatar.url %>" alt="User Photo">
      </div>
      <div class="column text-left align-self-middle ">
        <%= f.file_field :avatar%>
      </div>

      <div class="column small-12 edit-background-img">
        <%= f.label "Profile Background", autocomplete: "off" %>  <i>(atleast 800x600 image for best layout)</i>
            <div class="thumbnail">
                <img src= "<%= resource.profile_background_avatar.url %>">
            </div>
      </div>
      <div class="column text-left align-self-middle ">
        <%= f.file_field :profile_background_avatar%>
      </div>
    </div>
    <%= f.label :username, autocomplete: "off" %>
    <%= f.text_field :username, autofocus: false, class: "form-setting" %>
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "off", class: "form-setting" %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-setting" %>
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "off", class: "form-setting" %>
    <%= f.submit "Update", class: "button small expanded" %>
<% end %>

<p class="text-center">Unhappy? delete account <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button small expanded warning" %></p>
