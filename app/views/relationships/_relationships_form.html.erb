<% unless current_user == @user %>
  <% if current_user.following?(@user) %>
      <%= render 'relationships/unfollow' %>
  <% else %>
      <%= render 'relationships/follow' %>
  <% end %>
<% else %>
  <%= link_to "Edit Profile", edit_user_registration_path(@user) , class: "button tiny secondary profile-edit-button" %>
<% end %>